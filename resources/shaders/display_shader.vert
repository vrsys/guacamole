@include "shaders/common/header.glsl"



layout(location=0) in vec3 in_position;

out vec2 tex_coord;
void main() {
  tex_coord = in_position.xy*0.5 + 0.5;
  gl_Position = vec4(in_position, 1.0);

  gl_ViewportIndex = gl_InstanceID;
}
